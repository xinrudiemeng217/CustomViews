<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WaveView">
        <attr name="above_wave_color" format="color" />
        <attr name="blow_wave_color" format="color" />
        <attr name="progress" format="float" />
        <attr name="circle_bg" format="integer" />
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CountTimeProgressView">

        <attr name="background_Color" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderDrawColor" format="color" />
        <attr name="borderBottomColor" format="color" />

        <attr name="markBallWidth" format="dimension" />
        <attr name="markBallColor" format="color" />
        <attr name="markBallFlag" format="boolean" />

        <attr name="startAngle" format="integer" />
        <attr name="clockwise" format="boolean" />

        <attr name="countTime" format="integer"/>

        <attr name="textStyle" format="enum">
            <enum name="jump" value="0" />
            <enum name="second" value="1" />
            <enum name="clock" value="2" />
            <enum name="none" value="3" />
        </attr>

        <attr name="titleCenter" format="string"/>
        <attr name="titleCenterColor" format="color"/>
        <attr name="titleCenterSize" format="dimension" />

    </declare-styleable>

    <declare-styleable name="PxBlurringView">
        <attr name="blurRadius" format="integer"/>
        <attr name="downsampleFactor" format="integer"/>
        <attr name="overlayColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="FlipperView">
        <attr name="defaultIndex" format="integer"/>
        <attr name="flipDirection">
            <enum name="backToFront" value="0"/>
            <enum name="frontToBack" value="1"/>
        </attr>
        <attr name="flipAxis">
            <enum name="X" value="0"/>
            <enum name="Y" value="1"/>
        </attr>
        <attr name="usePerspective" format="boolean"/>
        <attr name="duration" format="integer"/>
        <attr name="tapToFlip" format="boolean"/>
    </declare-styleable>
</resources>